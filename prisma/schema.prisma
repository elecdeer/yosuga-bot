// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserConfig {
  id         String @id
  voice      Voice? @relation(fields: [voiceId], references: [id])
  voiceId    Int?   @unique
  pitch      Float?
  intonation Float?
}

model GuildConfig {
  id             String   @id
  volume         Float?
  speed          Float?
  fastSpeedScale Float?
  readEnterExit  Boolean?
  readTimeSignal Boolean?
  timeAutoLeave  Int?
  timeReReadName Int?
  readMaxLength  Int?
}

model Voice {
  id                   Int                   @id @default(autoincrement())
  name                 String                @unique
  type                 String
  active               Boolean               @default(true)
  VoicevoxVoice        VoicevoxVoice?
  VoiceroidDaemonVoice VoiceroidDaemonVoice?
  UserConfig           UserConfig[]
}

model VoicevoxVoice {
  id          Int    @id @default(autoincrement())
  voice       Voice  @relation(fields: [voiceId], references: [id])
  voiceId     Int    @unique
  url         String
  speakerUUID String
  styleName   String
}

model VoiceroidDaemonVoice {
  id      Int    @id @default(autoincrement())
  voice   Voice  @relation(fields: [voiceId], references: [id])
  voiceId Int    @unique
  url     String
}
