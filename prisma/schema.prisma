// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserConfig {
  id         String   @id
  voice      Voice @relation(fields: [voiceId], references: [id])
  voiceId    Int   @unique
  pitch      Float @default(value: 1.0)
  intonation Float @default(value: 1.0)
}

model GuildConfig {
  id             String     @id
  volume         Float   @default(value: 1.0)
  speed          Float   @default(value: 1.2)
  fastSpeedScale Float   @default(value: 1.5)
  readEnterExit  Boolean @default(value: true)
  readTimeSignal Boolean @default(value: true)
  timeAutoLeave  Int     @default(value: 10000)
  timeReReadName Int     @default(value: 30000)
  readMaxLength  Int     @default(value: 80)
}

model Voice {
  id                   Int                   @id @default(autoincrement())
  name                 String                @unique
  type                 String
  active               Boolean               @default(true)
  VoicevoxVoice        VoicevoxVoice?
  VoiceroidDaemonVoice VoiceroidDaemonVoice?
  UserConfig           UserConfig[]
}

model VoicevoxVoice {
  id          Int    @id @default(autoincrement())
  voice       Voice  @relation(fields: [voiceId], references: [id])
  voiceId     Int    @unique
  url         String
  speakerUUID String
  styleName   String
}

model VoiceroidDaemonVoice {
  id      Int    @id @default(autoincrement())
  voice   Voice  @relation(fields: [voiceId], references: [id])
  voiceId Int    @unique
  url     String
}
