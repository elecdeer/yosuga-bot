generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserConfig {
  snowflake  String @id
  class      String
  voice      Voice? @relation(fields: [voiceId], references: [id])
  voiceId    Int?   @unique
  pitch      Float?
  intonation Float?

  @@index(fields: [snowflake])
}

model GuildConfig {
  snowflake      String   @id
  class          String
  volume         Float?
  speed          Float?
  fastSpeedScale Float?
  readEnterExit  Boolean?
  readTimeSignal Boolean?
  timeAutoLeave  Int?
  timeReReadName Int?
  readMaxLength  Int?

  @@index(fields: [snowflake])
}

model Voice {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  active     Boolean      @default(true)
  type       String
  params     String
  UserConfig UserConfig[]
}
